                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="#ffffff"
                    android:textColor="@color/colorPrimary"
                    android:text="Rate(ppm)"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
        </LinearLayout>
